    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "attach",
        "name": "Attach NestJS (nodemon)",
        "port": 9229,
        "restart": true,
        "protocol": "inspector"
        },
        {
            "name": "Debug Jest",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/home/facu/.nvm/versions/node/v16.20.2/bin/node",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "cwd": "${workspaceFolder}",
            "args": [
                "--runInBand",
                "--watch=true"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}